# =============================================================================
# Project Service - Environment Configuration
# =============================================================================
# Environment variables for the Project Service microservice
# Copy this file to .env and fill in the actual values
# =============================================================================


# =============================================================================
# SPRING CONFIGURATION
# =============================================================================
# Application profile (local, docker, prod)

SPRING_PROFILE=local

# =============================================================================
# SERVER
# =============================================================================
# Server port

SERVER_PORT=8082

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database for project service

PROJECT_DB_HOST=localhost
PROJECT_DB_PORT=5435
PROJECT_DB_NAME=projectDB
PROJECT_DB_USER=your_project_db_username
PROJECT_DB_PASSWORD=your_secure_project_db_password

# =============================================================================
# RABBITMQ CONFIGURATION
# =============================================================================
# Message broker for inter-service communication

RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=your_rabbitmq_username
RABBITMQ_PASSWORD=your_secure_rabbitmq_password

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# Google Gemini AI for document analysis and research assistance
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_URL=your_gemini_model_url

